<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".board.photo.PhotoWrite">
    <LinearLayout
            android:id="@+id/titleLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/photoWriteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="제목"
                android:padding="20dp"
                android:textColor="#000000"
                android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLinear"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoWriteImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/photoWriteContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/photoWriteButton"
            android:layout_below="@+id/contentLinear"
            android:gravity="left|top"
            android:hint="내용"
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/contentLinear"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/photoWriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="올리기" />

        <Button
            android:id="@+id/photoAddButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진첨부" />
    </LinearLayout>
</LinearLayout>