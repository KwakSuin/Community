<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".board.quest.Quest_write">

    <EditText
        android:id="@+id/questWrite_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="제목"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/questWrite_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questWrite_title"
        android:hint="닉네임"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/questWrite_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/questWrite_name"
        android:layout_above="@+id/button"
        android:gravity="left|top"
        android:hint="내용"
        android:textSize="22sp"
        android:textColor="#000000"
        android:padding="20dp"/>

    <Button
        android:id="@+id/questWrite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="올리기" />

</RelativeLayout>